<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #212529;
        }

        .login-box {
            position: relative;
            background: white;
            padding: 50px 40px;
            border-radius: 20px;
            text-align: center;
            width: 650px;
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2);
        }

        .panda-img {
            width: 300px;
            position: absolute;
            top: -230px;
            left: 50%;
            transform: translateX(-50%);
        }

        h2 {
            font-family: 'Comic Sans MS', cursive, sans-serif;
            color: #212529;
            margin-bottom: 20px;
        }

        .btn-pink {
            background-color: #212529;
            color: white;
            font-weight: bold;
        }

        .btn-pink:hover {
            background-color: #212529;
        }
    </style>
</head>
<body>

<div class="container d-flex justify-content-center align-items-center min-vh-100">
    <div class="login-box text-center">
        <div class="panda">
            <img src="./images/panda.png" alt="Panda" class="panda-img">
        </div>
        <div class="login-form">
            <h2 class="text-center">Login</h2>
            <form onsubmit="event.preventDefault(); login();">
                <div class="mb-3">
                    <input type="text" class="form-control" id="id" placeholder="ID" required>
                </div>
                <div class="mb-3">
                    <input type="text" class="form-control" id="username" placeholder="Username" required>
                </div>
                <div class="mb-3">
                    <input type="password" class="form-control" id="password" placeholder="Password" required>
                </div>
                <button type="submit" class="btn btn-pink w-100">Login</button>
            </form>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

<script>
    function login(){
        const id = document.getElementById('id').value;
        const username = document.getElementById('username').value;
        const password = document.getElementById('password').value;

        const jsonData = {
            id: id,
            username: username,
            password: password
        };

        const domain = 'https://whatsappserver.apbsp.com/login/validation';

        fetch(domain, {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            },
            body: JSON.stringify(jsonData)
        })
        .then(response => {
            if (!response.ok) {
                throw new Error("Error in validation");
            }
            return response.json();
        })
        .then(data => {
            console.log('Success:', data);
            localStorage.setItem("user_id", data);
            window.location.href = '/dashboard'; 
        })
        .catch(error => {
            console.error('Error:', error);
            alert('Failed to login.');
        });
    }
</script>

</body>
</html>
